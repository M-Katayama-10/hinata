<div class="session_new">
  <%= render "shared/header" %>
  <div class="">
    <div class="">
      <h2 class="">ユーザーログイン</h2>
        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="session_content">
          <%= f.label :email, "" %><br />
          <%= f.email_field :email, id:"", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="session_content">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"", autocomplete: "current-password" %>
        </div>

        <div class="session_content">
          <%= f.submit "ログイン", class: :form__btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>

