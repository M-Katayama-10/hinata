<%= render "shared/header" %>
<div class="main">

  <div class="top_page">
    <h1>日向坂46出演情報</h1>
    <div class = "one_tweet">
      <% @tweets.each do |tweet| %>
        <div class = "days">
          <%= link_to tweet.days, tweet_path(tweet.id) %>
          <% case tweet.dayofweek_id %>
            <% when 1 then %>
              <div class = "week">月曜日</div>
            <% when 2 then %>
              <div class = "week">火曜日</div>
            <% when 3 then %>
              <div class = "week">水曜日</div>
            <% when 4 then %>
              <div class = "week">木曜日</div>
            <% when 5 then %>
              <div class = "week">金曜日</div>
            <% when 6 then %>
              <div class = "week">土曜日</div>
            <% when 7 then %>
              <div class = "week">日曜日</div>
          <% end %>
        </div>

        <div class="index_tweet">
          <div class='tweet_text'>
            <%= "出演：" %>
            <%= tweet.member.name %>
          </div>

          <div class='tweet_text'>
          <% if tweet.time.present? %>
            <%= tweet.time %>〜<%= tweet.endtime %>
          <% end %>
          </div>

          <div class='tweet_text'>
            <%= tweet.program %>
          </div>

          <div class='tweet_text'>
            <%= tweet.supplement %>
          </div>

          <div class=''>
            <%= link_to "by #{tweet.user.name}", user_path(tweet.user.id), method: :get %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="side-bar">
    <%= render "shared/side_bar" %>
  </div>

</div>
<%= render "shared/footer" %>
