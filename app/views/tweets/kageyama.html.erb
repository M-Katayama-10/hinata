<%= render "shared/header" %>
<div class ="profile">
  <div class="member_image">
    <img src= "https://cdn.hinatazaka46.com/images/14/4e2/4c53bb94afb84f7d070a0e1d48eb0/400_320_102400.jpg">
  </div>
  <div class ="member_name">
    <div class="kanji">
      影山 優佳
    </div>
    <div class="hiragana">
      かげやま ゆうか
    </div>
    <div class="generation">
      一期生
    </div>
    <div class="age">
      20歳
    </div>
    <div class="birthday">
      2001年5月8日
    </div>
    <div class="prefucture">
      東京都
    </div>
  </div>
</div>


<% @tweets.each do |tweet| %>
  <div class = "days">
      <%= link_to tweet.days, tweet_path(tweet.id) %>
      <% case tweet.dayofweek_id %>
        <% when 1 then %>
          <div class = "week">月曜日</div>
        <% when 2 then %>
          <div class = "week">火曜日</div>
        <% when 3 then %>
          <div class = "week">水曜日</div>
        <% when 4 then %>
          <div class = "week">木曜日</div>
        <% when 5 then %>
          <div class = "week">金曜日</div>
        <% when 6 then %>
          <div class = "week">土曜日</div>
        <% when 7 then %>
          <div class = "week">日曜日</div>
      <% end %>
  </div>

  <div class="index_tweet">
    <div class='tweet_text'>
      <%= "出演：" %>
      <%= tweet.member.name %>
    </div>

    <div class='tweet_text'>
    <% if tweet.time.present? %>
      <%= tweet.time %>〜<%= tweet.endtime %>
    <% end %>
    </div>

    <div class='tweet_text'>
      <%= tweet.program %>
    </div>

    <div class='tweet_text'>
      <%= tweet.supplement %>
    </div>

  </div>
<% end %>


<%= render "shared/footer" %>
