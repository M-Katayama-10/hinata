<div class ="show_main">
  <%= render "shared/header" %>

  <div class = "days">
    <%= @tweet.days %>
    <% case @tweet.dayofweek_id %>
      <% when 1 then %>
        <div class = "week">月曜日</div>
      <% when 2 then %>
        <div class = "week">火曜日</div>
      <% when 3 then %>
        <div class = "week">水曜日</div>
      <% when 4 then %>
        <div class = "week">木曜日</div>
      <% when 5 then %>
        <div class = "week">金曜日</div>
      <% when 6 then %>
        <div class = "week">土曜日</div>
      <% when 7 then %>
        <div class = "week">日曜日</div>
    <% end %>
  </div>

  <div class="index_tweet">
    <div class='tweet_text'>
      <%= "出演：" %>
      <%= @tweet.member.name %>
    </div>

    <div class='tweet_text'>
    <% if @tweet.time.present? %>
      <%= @tweet.time %>〜<%= @tweet.endtime %>
    <% end %>
    </div>

    <div class='tweet_text'>
      <%= @tweet.program %>
    </div>

    <div class='tweet_text'>
      <%= @tweet.supplement %>
    </div>

    <div class=''>
      <%= link_to "tweeted by #{@tweet.user.name}", user_path(@tweet.user.id), method: :get %>
    </div>

  </div>

  <div class ="edit_destroy">
    <div class ="edit_btn">
      <% if user_signed_in? %>
        <%= link_to "編集する", edit_tweet_path(@tweet.id) %>
      <% end %>
    </div>

    <div class ="destroy_btn">
      <% if user_signed_in? && current_user.id == @tweet.user_id %>
        <%= link_to "削除する", tweet_path(@tweet.id), method: :delete %>
      <% end %>
    </div>
  </div>

  <%#= render "shared/footer" %>
</div>